<Page loaded="loaded" actionBarHidden="true">
	<ScrollView>
		<StackLayout orientation="vertical">
			<Label class="title" text="Ajouter un véhicule" />
			<Label class="title-textfield" text="Nom du véhicule:" />
			<TextField id="tf-name" hint="Ma voiture" text="ffXV" autocorrect="false" />
			<Label class="title-textfield" text="Plaque du véhicule:" />
			<TextField id="tf-plaque" hint="00-0000-00" text="PO-45145-PO" autocorrect="false" />
			<Button id="button-valid" text="Valider" tap="valid" />
			<Button id="button-cancel"  text="Annuler" tap="cancel" />
			<ActivityIndicator busy="{{ isLoading }}" />
		</StackLayout>
	</ScrollView>
</Page>

